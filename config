[module/cmus]
type = custom/script

exec = sh ~/.config/polybar/cmus.sh
exec-if = pgrep -x cmus
interval = 1

click-left = cmus-remote --pause
click-right = cmus-remote --stop

format = <label>
format-prefix = "Óâ±"
format-prefix-foreground = #1db954
label = %output%

[module/previous]
type              = custom/script
format-text       = <label>
label             = ÓÅï
exec              = echo label
click-left        = cmus-remote -r -p && ~/scripts/popups/cover.sh
click-right       = wmctrl -s 4
format-foreground = #FFF
format-padding    = 2

[module/next]
type              = custom/script
format-text       = <label>
label             = ÓÅõ
exec              = echo label
click-left        = cmus-remote -n -p && ~/scripts/popups/cover.sh
click-right       = wmctrl -s 4
format-foreground = #FFF
format-padding    = 2

[module/playpause]
type              = custom/script
exec              = ~/scripts/playpause.sh
interval          = 0.4
click-left        = cmus-remote -u
click-right       = wmctrl -s 5
scroll-up         = exec amixer sset Master 2%+
scroll-down       = exec amixer sset Master 2%-
format-foreground = #FFF
format-padding = 2

[module/arrow]
type = custom/text
content = "Óàà"
content-foreground = #bb333f
content-background =  
content-padding = 2
click-left     = ~/.config/polybar/hidebars.sh -s
click-right    = ~/.config/polybar/hidebars.sh -h

[module/spotlogo]
type = custom/text
content = "ÔÄÅ"
content-foreground = #FFF

[module/spotify]
